<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3e5e5"
        android:orientation="vertical"
    tools:context="com.example.jesus95.petvet.Guias.SeccionAlimentos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/back"
                />

            <Button
                android:id="@+id/btn_alimentacion"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/alimento"

                />


        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ALIMENTOS"
            android:textColor="@color/negro"
            android:textSize="20dp"
            />


        <com.marcok.stepprogressbar.StepProgressBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/stepProgressBar"
            app:cumulativeDots="false"
            app:activeDotIndex="0"
            app:activeDotColor="@color/rojo"
            app:inactiveDotColor="@color/colorPrimary"
            app:numberDots="2"
            app:dotSize="30dp"
            app:spacing="30dp"/>

        <Button
            android:id="@+id/btn_cachorros"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"

            android:text="SECCION CACHORROS" />

        <Button
            android:id="@+id/btn_adultos"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:text="SECCION ADULTOS" />


    </LinearLayout>
